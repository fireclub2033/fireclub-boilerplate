# ---------------------------------------------------------
# [Python / Project 설정]
# ---------------------------------------------------------
PYTHON_VERSION=3.10
RUN_MODE=dev

# ---------------------------------------------------------
# [SSH 접속 정보 - psql-tunnel 용]
# ---------------------------------------------------------
REMOTE_USER=your_ssh_user
REMOTE_HOST=your.ssh.gateway.com
SSH_TUNNEL_PORT=15432

CONTAINER_USER=your_container_user
CONTAINER_PASS=your_container_pass

# ---------------------------------------------------------
# [PostgreSQL / TimescaleDB 연결 정보]
# ---------------------------------------------------------
DB_HOST=your.database.internal      # SSH 터널링 대상 DB 주소
DB_PORT=5432
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# ---------------------------------------------------------
# [Jupyter 설정 (선택)]
# ---------------------------------------------------------
# JUPYTER_PASSWORD_HASH=sha1:xxxxx    # 필요 시 해시로 설정
JUPYTER_PORT=8888                   # 기본 포트 유지 가능

# ---------------------------------------------------------
# [Docker 환경설정]
# ---------------------------------------------------------
SSH_PORT=2222
